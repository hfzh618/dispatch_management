<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.sys.modular.system.mapper.NewOrderMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        uid AS "uid",weight as "weight",volume as "volume",state as "state",upsiteid as "upsiteid",downsiteid as "downsiteid"
    </sql>



    <select id="list" resultType="map">
        select
        <include refid="Base_Column_List"></include>
        from new_orders
        <if test="condition != null and condition != ''">
            where uid like CONCAT('%',#{condition},'%')
        </if>
    </select>


</mapper>
